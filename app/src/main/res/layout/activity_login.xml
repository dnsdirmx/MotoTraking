<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ralpuchev.mototracking.Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:id="@+id/label_usuario"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/campo_usuario"
        android:layout_below="@+id/label_usuario"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/label_usuario"
        android:theme="@style/Theme.AppCompat.Light"
        android:hint="Tu nombre de usuario" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/label_password"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/campo_usuario"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/campo_password"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        android:hint="Tu password"
        android:layout_below="@+id/label_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:id="@+id/boton_entrar"
        android:background="#00b05c"
        android:textColor="#ffffff"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/campo_password"
        android:layout_centerHorizontal="true"
        android:onClick="validaLogin" />

</RelativeLayout>
